<div class="eventheader">
  <h2>Event List</h2>
</div>
<div class="mainCol">
  <% if @today_events.any? %>
    <%= render 'pages/event_row', :object => @today_events %>
  <% end %>
  <% if @tomorrow_events.any? %>
    <%= render 'pages/event_row', :object => @tomorrow_events %>
  <% end %>
  <% if @week_events.any? %>
    <%= render 'pages/event_row', :object => @week_events %>
  <% end %>
</div>
